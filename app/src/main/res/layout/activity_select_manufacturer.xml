<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.imm.bin.SelectManufacturer">

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/header_oges_SelectManufacturer"
    android:scaleType="centerCrop"
    android:src="@drawable/bg_image2"/>

    <RelativeLayout android:id="@+id/header_oges_SelectManufacturer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:id="@+id/img_logo"
            android:visibility="gone"
            android:src="@drawable/ic_logo_company"/>
    </RelativeLayout>

    <ImageView android:id="@+id/iv_slanting_edge_SelectManufacturer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-12dp"
        android:layout_below="@+id/header_oges_SelectManufacturer"
        android:src="@drawable/iv_slanting"/>


    <LinearLayout android:id="@+id/container_selected_values_SelectManufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/iv_slanting_edge_SelectManufacturer"
        android:orientation="horizontal">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexWrap="wrap"
            app:alignItems="stretch"
            app:alignContent="stretch" >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_location_black"/>
        <TextView android:id="@+id/tv_selected_governorate_value_SelectManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_double_right"/>
        <TextView android:id="@+id/tv_selected_willayat_value_SelectManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"/>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_double_right"/>
        <TextView android:id="@+id/tv_selected_capacity_value_SelectManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"/>

        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

    <RelativeLayout  android:id="@+id/container_show_value_SelectManufacturer"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/spinner_bg"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="36dp"
        android:layout_centerHorizontal="true"
        android:padding="6dp"
        android:layout_below="@+id/container_selected_values_SelectManufacturer">

        <TextView android:id="@+id/tv_selected_manufacturer_SelectManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/white"
             android:layout_centerVertical="true"
            android:text="Select Manufacturer"/>

    </RelativeLayout>


    <Spinner android:id="@+id/sp_SelectManufacturer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/spinner_bg"
        android:visibility="gone"
    android:layout_below="@+id/iv_slanting_edge_SelectManufacturer"
    android:layout_marginLeft="36dp"
    android:layout_marginRight="36dp"
    android:layout_marginTop="36dp"
    android:layout_marginBottom="36dp"
    android:layout_centerHorizontal="true"/>

<RelativeLayout android:id="@+id/rl_enter_SelectManufacturer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_alignParentRight="true"
    android:layout_marginRight="36dp"
    android:background="@drawable/blue_button_bg"
    android:layout_below="@+id/container_show_value_SelectManufacturer">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@drawable/blue_button_text_click"
        android:textSize="14sp"
        android:text="ENTER"/>
</RelativeLayout>


</RelativeLayout>

