<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40sp"
    android:padding="10sp"
    android:id="@+id/ll_list_country">

    <TextView
        android:id="@+id/tx_item_name"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20sp"

        android:gravity="center|left"
        android:text="Remarks"
        android:textColor="@color/other_text_color_dark_grey"></TextView>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/other_text_color_dark_grey"
        android:layout_below="@id/tx_item_name"/>
</RelativeLayout>
