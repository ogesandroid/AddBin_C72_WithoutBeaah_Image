<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_root_save_server_details"
    tools:context="com.imm.bin.SaveServerDetails">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_oges_SaveServerDetails"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_image2"/>

    <RelativeLayout android:id="@+id/header_oges_SaveServerDetails"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_img_icon"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_logo_company"
            android:visibility="gone"/>
    </RelativeLayout>

    <ImageView android:id="@+id/iv_slanting_edge_SaveServerDetails"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-12dp"
        android:layout_below="@+id/header_oges_SaveServerDetails"
        android:src="@drawable/iv_slanting"/>

    <TextView android:id="@+id/tv_label_SaveServerDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_below="@+id/iv_slanting_edge_SaveServerDetails"
        android:text="Update or Save data from server"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tv_label_SaveServerDetails"
        android:orientation="vertical">

    <Button android:id="@+id/bt_update_SaveServerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/white"
        android:textColor="@color/enter_buttonColor"
        android:text="UPDATE"/>


    </LinearLayout>

</RelativeLayout>
