<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_root_select_governorate"
    tools:context="com.gpd.gpdimg.bin.SelectGovernorate">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_image2"/>

    <RelativeLayout android:id="@+id/header_oges_SelectGovernorate"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">
        <ImageView android:id="@+id/iv_exit"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:visibility="visible"
            android:src="@drawable/ic_logout"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:id="@+id/img_logo"
            android:visibility="gone"
            android:src="@drawable/ic_logo_company"/>

        <ImageView android:id="@+id/iv_save_to_local_db_SelectGovernorate"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:visibility="visible"
            android:src="@drawable/ic_save_to_local"/>


    </RelativeLayout>

    <ImageView android:id="@+id/iv_slanting_edge_SelectGovernorate"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-12dp"
        android:layout_below="@+id/header_oges_SelectGovernorate"
        android:src="@drawable/iv_slanting"/>


    <RelativeLayout  android:id="@+id/container_show_value_SelectGovernorate"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/spinner_bg"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="66dp"
        android:layout_marginBottom="36dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_slanting_edge_SelectGovernorate">

        <TextView android:id="@+id/tv_selected_governorate_id_SelectGovernorate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Select Governorate"/>

    </RelativeLayout>

    <Spinner android:id="@+id/sp_SelectGovernorate"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/spinner_bg"
        android:layout_below="@+id/iv_slanting_edge_SelectGovernorate"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="76dp"
        android:layout_marginBottom="36dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>

         <RelativeLayout android:id="@+id/rl_enter_SelectGovernorate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:padding="6dp"
             android:layout_alignParentRight="true"
             android:layout_marginRight="36dp"
             android:background="@drawable/blue_button_bg"
             android:layout_below="@+id/container_show_value_SelectGovernorate">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="@drawable/blue_button_text_click"
                android:textSize="14sp"
                android:text="ENTER"/>
         </RelativeLayout>


</RelativeLayout>
